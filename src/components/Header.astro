---
---

<header class="bg-white/95 backdrop-blur-md shadow-lg sticky top-0 z-50 border-b border-gray-200/50">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-3 animate-fade-in-left hover:opacity-80 transition-opacity">
        <div class="w-14 h-14 flex items-center justify-center">
          <img src={`${import.meta.env.BASE_URL}images/herb.png`} alt="Herb Pilzna OSP" class="w-full h-full object-contain drop-shadow-md" />
        </div>
        <div>
          <h1 class="text-xl font-display gradient-text-primary">OSP Pilzno</h1>
          <p class="text-sm font-body" style="color: var(--secondary-gray);">Ochotnicza Straż Pożarna</p>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8 animate-fade-in-up">
        <a href="/" class="nav-link font-body transition-all duration-300 font-medium relative group" style="color: var(--secondary-gray);">
          Strona główna
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 transition-all duration-300 group-hover:w-full" style="background: var(--primary-red);"></span>
        </a>
        <div class="relative group">
          <a href="/o-nas" class="nav-link font-body transition-all duration-300 font-medium relative group" style="color: var(--secondary-gray);">
            O nas
            <span class="absolute -bottom-1 left-0 w-0 h-0.5 transition-all duration-300 group-hover:w-full" style="background: var(--primary-red);"></span>
          </a>
          <!-- Submenu -->
          <div class="absolute top-full left-0 mt-2 w-48 bg-white rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 z-50">
            <a href="/o-nas" class="block px-4 py-3 text-gray-700 hover:bg-red-50 hover:text-red-600 transition-colors">
              O nas
            </a>
            <a href="/historia" class="block px-4 py-3 text-gray-700 hover:bg-red-50 hover:text-red-600 transition-colors">
              Historia
            </a>
          </div>
        </div>
        <a href="/dzialania" class="nav-link font-body transition-all duration-300 font-medium relative group" style="color: var(--secondary-gray);">
          Działania
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 transition-all duration-300 group-hover:w-full" style="background: var(--primary-red);"></span>
        </a>
        <a href="/galeria" class="nav-link font-body transition-all duration-300 font-medium relative group" style="color: var(--secondary-gray);">
          Galeria
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 transition-all duration-300 group-hover:w-full" style="background: var(--primary-red);"></span>
        </a>
        <a href="/kontakt" class="nav-link font-body transition-all duration-300 font-medium relative group" style="color: var(--secondary-gray);">
          Kontakt
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 transition-all duration-300 group-hover:w-full" style="background: var(--primary-red);"></span>
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button id="mobile-menu-button" class="md:hidden p-3 rounded-xl hover:bg-gray-100 transition-all duration-300 animate-fade-in-right">
        <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden mt-6 pb-4 border-t border-gray-200 animate-slide-in-top">
      <div class="flex flex-col space-y-4 pt-6">
        <a href="/" class="nav-link-mobile font-body transition-all duration-300 font-medium py-3 px-4 rounded-lg" style="color: var(--secondary-gray); background: var(--primary-red-subtle);">
          Strona główna
        </a>
        <a href="/o-nas" class="nav-link-mobile font-body transition-all duration-300 font-medium py-3 px-4 rounded-lg" style="color: var(--secondary-gray); background: var(--primary-red-subtle);">
          O nas
        </a>
        <a href="/historia" class="nav-link-mobile font-body transition-all duration-300 font-medium py-3 px-4 rounded-lg" style="color: var(--secondary-gray); background: var(--primary-red-subtle);">
          Historia
        </a>
        <a href="/dzialania" class="nav-link-mobile font-body transition-all duration-300 font-medium py-3 px-4 rounded-lg" style="color: var(--secondary-gray); background: var(--primary-red-subtle);">
          Działania
        </a>
        <a href="/galeria" class="nav-link-mobile font-body transition-all duration-300 font-medium py-3 px-4 rounded-lg" style="color: var(--secondary-gray); background: var(--primary-red-subtle);">
          Galeria
        </a>
        <a href="/kontakt" class="nav-link-mobile font-body transition-all duration-300 font-medium py-3 px-4 rounded-lg" style="color: var(--secondary-gray); background: var(--primary-red-subtle);">
          Kontakt
        </a>
      </div>
    </div>
  </nav>
</header>

<style>
  .nav-link {
    position: relative;
    overflow: hidden;
  }

  .nav-link::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(220, 38, 38, 0.1), transparent);
    transition: left 0.5s;
  }

  .nav-link:hover::before {
    left: 100%;
  }

  .nav-link-mobile {
    transform: translateX(-20px);
    opacity: 0;
    animation: slideInFromLeft 0.3s ease-out forwards;
  }

  .nav-link-mobile:nth-child(1) { animation-delay: 0.1s; }
  .nav-link-mobile:nth-child(2) { animation-delay: 0.2s; }
  .nav-link-mobile:nth-child(3) { animation-delay: 0.3s; }
  .nav-link-mobile:nth-child(4) { animation-delay: 0.4s; }
  .nav-link-mobile:nth-child(5) { animation-delay: 0.5s; }
  .nav-link-mobile:nth-child(6) { animation-delay: 0.6s; }

  @keyframes slideInFromLeft {
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }
</style>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
