---
import Layout from '../layouts/Layout.astro';
---

<Layout title="OSP Pilzno - Ochotnicza Straż Pożarna">
  <!-- Hero Section with Video Background -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Video Background -->
    <video class="video-bg" autoplay muted loop playsinline>
      <source src="/videos/fire-hero-bg.mp4" type="video/mp4">
      <!-- Fallback image if video doesn't load -->
    </video>

    <!-- Video Overlay -->
    <div class="video-overlay"></div>

    <!-- Gradient Overlay -->
    <div class="absolute inset-0 bg-gradient-to-br from-red-600 via-red-700 to-red-800"></div>

    <!-- Content -->
    <div class="relative z-10 container mx-auto px-4 text-center">
      <div class="max-w-5xl mx-auto">
        <!-- Logo Animation -->
        <div class="animate-bounce-in mb-8">
          <div class="w-32 h-32 bg-white/10 backdrop-blur-sm rounded-full flex items-center justify-center mx-auto glass p-4">
            <img src={`${import.meta.env.BASE_URL}/images/herb.png`} alt="Herb Pilzna OSP" class="w-full h-full object-contain animate-glow drop-shadow-2xl" />
          </div>
        </div>

        <!-- Main Title -->
        <h1 class="text-6xl md:text-8xl font-display mb-6 leading-tight animate-fade-in-up">
          <span class="gradient-text-primary">OSP</span>
          <span class="text-white"> Pilzno</span>
        </h1>

        <!-- Subtitle -->
        <p class="text-2xl md:text-3xl mb-12 text-white animate-fade-in-up" style="animation-delay: 0.2s;">
          Służymy społeczności lokalnej z <span class="font-bold text-orange-400">pasją</span> i <span class="font-bold text-orange-400">poświęceniem</span>
        </p>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-6 justify-center animate-fade-in-up" style="animation-delay: 0.4s;">
          <a href="/o-nas" class="btn-modern bg-white px-10 py-5 rounded-xl text-xl font-bold hover:bg-neutral-100 shadow-large animate-glow" style="color: var(--primary-red);">
            <span class="flex items-center justify-center gap-3">
              <span>O nas</span>
            </span>
          </a>
          <a href="/kontakt" class="btn-modern glass text-white px-10 py-5 rounded-xl text-xl font-bold hover:bg-white/20 shadow-large">
            <span class="flex items-center justify-center gap-3">
              <span>Skontaktuj się z nami</span>
            </span>
          </a>
        </div>

        <!-- Scroll Indicator -->
        <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-float">
          <div class="w-8 h-12 border-2 border-white/50 rounded-full flex justify-center">
            <div class="w-1 h-3 bg-white/70 rounded-full mt-2 animate-pulse"></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Animated Particles -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="particle particle-1"></div>
      <div class="particle particle-2"></div>
      <div class="particle particle-3"></div>
      <div class="particle particle-4"></div>
      <div class="particle particle-5"></div>
    </div>
  </section>

  <!-- About Section -->
  <section class="py-20 relative overflow-hidden" style="background: linear-gradient(180deg, #ffffff, var(--primary-red-subtle));">
    <!-- Background Elements -->
    <div class="absolute top-20 left-10 w-32 h-32 rounded-full opacity-20 animate-float" style="background: var(--primary-red-subtle);"></div>
    <div class="absolute bottom-20 right-10 w-24 h-24 rounded-full opacity-20 animate-float" style="background: var(--secondary-blue); animation-delay: 1s;"></div>

    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16 scroll-reveal">
          <h2 class="text-5xl md:text-6xl font-display mb-6 gradient-text-primary">
            O naszej jednostce
          </h2>
          <p class="text-2xl font-body max-w-3xl mx-auto leading-relaxed" style="color: var(--secondary-gray);">
            OSP Pilzno to jednostka ochotniczej straży pożarnej, która od wielu lat
            <span class="text-red-600 font-semibold">służy społeczności lokalnej</span>
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="card-modern text-center p-8 bg-white/90 backdrop-blur-sm rounded-2xl shadow-large hover:shadow-xl animate-fade-in-left">
            <div class="w-20 h-20 rounded-2xl flex items-center justify-center mx-auto mb-6 animate-glow" style="background: var(--gradient-primary-br);">
              <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
            </div>
            <h3 class="text-2xl font-display mb-4 gradient-text-primary">Misja</h3>
            <p class="font-body text-lg leading-relaxed" style="color: var(--secondary-gray);">
              Zapewniamy bezpieczeństwo i pomoc w sytuacjach zagrożenia życia i mienia
            </p>
          </div>

          <div class="card-modern text-center p-8 bg-white/90 backdrop-blur-sm rounded-2xl shadow-large hover:shadow-xl animate-fade-in-up" style="animation-delay: 0.2s;">
            <div class="w-20 h-20 rounded-2xl flex items-center justify-center mx-auto mb-6 animate-glow" style="background: var(--gradient-secondary); animation-delay: 0.5s;">
              <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
              </svg>
            </div>
            <h3 class="text-2xl font-display mb-4 text-red-600">Wizja</h3>
            <p class="font-body text-lg leading-relaxed" style="color: var(--secondary-gray);">
              Być najlepszą jednostką OSP w regionie, gotową na każde wyzwanie
            </p>
          </div>

          <div class="card-modern text-center p-8 bg-white/90 backdrop-blur-sm rounded-2xl shadow-large hover:shadow-xl animate-fade-in-right" style="animation-delay: 0.4s;">
            <div class="w-20 h-20 rounded-2xl flex items-center justify-center mx-auto mb-6 animate-glow" style="background: var(--gradient-accent); animation-delay: 1s;">
              <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M16 4c0-1.11.89-2 2-2s2 .89 2 2-.89 2-2 2-2-.89-2-2zm4 18v-6h2.5l-2.54-7.63A1.5 1.5 0 0 0 18.54 8H16c-.8 0-1.54.37-2.01.99L12 11l-1.99-2.01A2.5 2.5 0 0 0 8 8H5.46c-.8 0-1.54.37-2.01.99L1 12.5V22h2v-6h2.5l2.54 7.63A1.5 1.5 0 0 0 9.46 24H12c.8 0 1.54-.37 2.01-.99L16 21l1.99 2.01A2.5 2.5 0 0 0 20 24h2.54c.8 0 1.54-.37 2.01-.99L27 16.5V22h2z"/>
              </svg>
            </div>
            <h3 class="text-2xl font-display mb-4 gradient-text-primary">Wartości</h3>
            <p class="font-body text-lg leading-relaxed" style="color: var(--secondary-gray);">
              Odwaga, poświęcenie, profesjonalizm i służba społeczności
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Statistics -->
  <section class="py-16 bg-red-600 text-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold mb-4">Nasze osiągnięcia</h2>
        <p class="text-xl text-red-100">Liczby, które mówią same za siebie</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="text-4xl font-bold mb-2" id="counter-1" data-target="150" data-suffix="+">0</div>
          <div class="text-red-100">Interwencji rocznie</div>
        </div>
        <div class="text-center">
          <div class="text-4xl font-bold mb-2" id="counter-2" data-target="25">0</div>
          <div class="text-red-100">Lat doświadczenia</div>
        </div>
        <div class="text-center">
          <div class="text-4xl font-bold mb-2" id="counter-3" data-target="30" data-suffix="+">0</div>
          <div class="text-red-100">Członków jednostki</div>
        </div>
        <div class="text-center">
          <div class="text-4xl font-bold mb-2">24/7</div>
          <div class="text-red-100">Gotowość do działania</div>
        </div>
      </div>
    </div>
  </section>
  <!-- ZOSP RP Section -->
  <section class="py-20 bg-gradient-to-b from-gray-50 to-white">
    <div class="container mx-auto px-4">
      <div class="max-w-7xl mx-auto">
        <div class="bg-white rounded-3xl shadow-xl border border-gray-100 overflow-hidden">
          <!-- Header with subtle gradient -->
          <div class="bg-gradient-to-r from-red-50 to-orange-50 px-8 py-12 text-center">
            <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
              Członek <span class="text-red-600">ZOSP RP</span>
            </h2>
            <p class="text-lg md:text-xl text-gray-700 max-w-4xl mx-auto">
              OSP Pilzno jest dumnym członkiem Związku Ochotniczych Straży Pożarnych
              Rzeczypospolitej Polskiej, największej organizacji pożarniczej w Polsce.
            </p>
          </div>

          <!-- Content with logo and description -->
          <div class="px-8 md:px-16 py-12">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
              <!-- Logo Side -->
              <div class="flex justify-center lg:justify-start">
                <div class="bg-gradient-to-br from-red-50 to-orange-50 p-8 rounded-2xl shadow-lg border border-red-100">
                  <img src={`${import.meta.env.BASE_URL}/images/zosp_RP.png`} alt="Związek Ochotniczych Straży Pożarnych RP" class="w-full max-w-md h-auto object-contain hover:scale-105 transition-transform duration-300" />
                </div>
              </div>

              <!-- Text Side -->
              <div class="text-center lg:text-left">
                <h3 class="text-2xl font-bold text-gray-900 mb-4">
                  Dlaczego członkostwo w ZOSP RP ma znaczenie?
                </h3>
                <div class="space-y-4 text-gray-700">
                  <p class="text-lg">
                    Jako członek ZOSP RP, mamy dostęp do specjalistycznych szkoleń i certyfikacji,
                    które podnoszą nasze kwalifikacje.
                  </p>
                  <p class="text-lg">
                    Współpracujemy z jednostkami OSP z całej Polski, wymieniając doświadczenia
                    i najlepsze praktyki ratownicze.
                  </p>
                  <p class="text-lg text-red-600 font-semibold">
                    To wszystko przekłada się na wyższe bezpieczeństwo dla mieszkańców Pilzna i okolic.
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Footer with additional info -->
          <div class="bg-gray-50 px-8 py-6 border-t border-gray-100">
            <p class="text-center text-gray-600">
              Jesteśmy częścią największej organizacji pożarniczej w Polsce, z ponad 150-letnią tradycją służby społeczeństwu.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- KSRG Section -->
  <section class="py-20 bg-gradient-to-b from-white to-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-7xl mx-auto">
        <div class="bg-white rounded-3xl shadow-xl border border-gray-100 overflow-hidden">
          <!-- Header with subtle gradient -->
          <div class="bg-gradient-to-r from-red-50 to-orange-50 px-8 py-12 text-center">
            <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
              Część <span class="text-red-600">Krajowego Systemu Ratowniczo-Gaśniczego</span>
            </h2>
            <p class="text-lg md:text-xl text-gray-700 max-w-4xl mx-auto">
              OSP Pilzno jest częścią KSRG - zintegrowanego systemu ratownictwa, który zapewnia
              ochronę życia, zdrowia, mienia i środowiska w całym kraju.
            </p>
          </div>

          <!-- Content with logo and description -->
          <div class="px-8 md:px-16 py-12">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
              <!-- Text Side -->
              <div class="text-center lg:text-left order-2 lg:order-1">
                <h3 class="text-2xl font-bold text-gray-900 mb-4">
                  Czym jest KSRG?
                </h3>
                <div class="space-y-4 text-gray-700">
                  <p class="text-lg">
                    Krajowy System Ratowniczo-Gaśniczy to integralna część organizacji
                    bezpieczeństwa wewnętrznego Polski, mająca na celu ochronę życia, zdrowia,
                    mienia i środowiska.
                  </p>
                  <p class="text-lg">
                    System obejmuje zwalczanie pożarów, klęsk żywiołowych oraz innych miejscowych
                    zagrożeń, koordynując działania wszystkich jednostek ratowniczych w kraju.
                  </p>
                  <p class="text-lg text-red-600 font-semibold">
                    Jako część KSRG, OSP Pilzno działa w ramach zintegrowanego systemu,
                    zapewniając szybką i profesjonalną pomoc w sytuacjach zagrożenia.
                  </p>
                </div>
              </div>

              <!-- Logo Side -->
              <div class="flex justify-center lg:justify-end order-1 lg:order-2">
                <div class="bg-gradient-to-br from-red-50 to-orange-50 p-8 rounded-2xl shadow-lg border border-red-100">
                  <img src={`${import.meta.env.BASE_URL}/images/ksrg_logo.png`} alt="Krajowy System Ratowniczo-Gaśniczy" class="w-full max-w-md h-auto object-contain hover:scale-105 transition-transform duration-300" />
                </div>
              </div>
            </div>
          </div>

          <!-- Footer with additional info -->
          <div class="bg-gray-50 px-8 py-6 border-t border-gray-100">
            <p class="text-center text-gray-600">
              KSRG łączy siły PSP, OSP i innych jednostek ratowniczych, tworząc spójny system
              ochrony bezpieczeństwa publicznego w całej Polsce.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-4xl font-bold text-gray-900 mb-4">Chcesz dołączyć do nas?</h2>
      <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
        Jeśli chcesz służyć społeczności i pomagać w sytuacjach zagrożenia,
        zapraszamy do dołączenia do naszej jednostki OSP Pilzno.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/kontakt" class="bg-red-600 text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-red-700 transition-colors duration-200">
          Skontaktuj się z nami
        </a>
        <a href="/o-nas" class="border-2 border-red-600 text-red-600 px-8 py-4 rounded-lg text-lg font-semibold hover:bg-red-600 hover:text-white transition-colors duration-200">
          Dowiedz się więcej
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Particle animations */
  .particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: rgba(255, 255, 255, 0.6);
    border-radius: 50%;
    pointer-events: none;
  }

  .particle-1 {
    top: 20%;
    left: 20%;
    animation: float 6s ease-in-out infinite;
  }

  .particle-2 {
    top: 40%;
    right: 20%;
    animation: float 8s ease-in-out infinite reverse;
  }

  .particle-3 {
    bottom: 30%;
    left: 30%;
    animation: float 7s ease-in-out infinite;
  }

  .particle-4 {
    top: 60%;
    right: 40%;
    animation: float 9s ease-in-out infinite reverse;
  }

  .particle-5 {
    bottom: 20%;
    right: 10%;
    animation: float 5s ease-in-out infinite;
  }

  /* Video fallback */
  .video-bg {
    background: var(--gradient-primary-br);
  }

  /* Enhanced scroll reveal */
  .scroll-reveal {
    opacity: 0;
    transform: translateY(60px);
    transition: all 1s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .scroll-reveal.revealed {
    opacity: 1;
    transform: translateY(0);
  }

  /* Staggered animations */
  .animate-stagger-1 { animation-delay: 0.1s; }
  .animate-stagger-2 { animation-delay: 0.2s; }
  .animate-stagger-3 { animation-delay: 0.3s; }
  .animate-stagger-4 { animation-delay: 0.4s; }
  .animate-stagger-5 { animation-delay: 0.5s; }
</style>

<script>
  // Scroll-triggered animations
  document.addEventListener('DOMContentLoaded', function() {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('revealed');
        }
      });
    }, observerOptions);

    // Observe all scroll-reveal elements
    document.querySelectorAll('.scroll-reveal').forEach(el => {
      observer.observe(el);
    });

    // Parallax effect for hero section
    window.addEventListener('scroll', () => {
      const scrolled = window.pageYOffset;
      const parallaxElements = document.querySelectorAll('.parallax');

      parallaxElements.forEach((element: Element) => {
        const htmlElement = element as HTMLElement;
        const speed = parseFloat(htmlElement.dataset.speed || '0.5');
        htmlElement.style.transform = `translateY(${scrolled * speed}px)`;
      });
    });

    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach((anchor: Element) => {
      anchor.addEventListener('click', function (this: HTMLAnchorElement, e: Event) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href') || '');
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });

    // Animated counters
    const animateCounter = (element: HTMLElement) => {
      const target = parseInt(element.dataset.target || '0');
      const suffix = element.dataset.suffix || '';
      const duration = 1000; // 2 seconds
      const step = target / (duration / 16); // 60fps
      let current = 0;

      const timer = setInterval(() => {
        current += step;
        if (current >= target) {
          element.textContent = target.toString() + suffix;
          clearInterval(timer);
        } else {
          element.textContent = Math.floor(current).toString() + suffix;
        }
      }, 16);
    };

    // Observe statistics section for counter animation
    const statsSection = document.querySelector('section.py-16.bg-red-600');
    if (statsSection) {
      const statsObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const counter1 = document.getElementById('counter-1');
            const counter2 = document.getElementById('counter-2');
            const counter3 = document.getElementById('counter-3');

            if (counter1 && !counter1.classList.contains('animated')) {
              counter1.classList.add('animated');
              animateCounter(counter1);
            }
            if (counter2 && !counter2.classList.contains('animated')) {
              counter2.classList.add('animated');
              animateCounter(counter2);
            }
            if (counter3 && !counter3.classList.contains('animated')) {
              counter3.classList.add('animated');
              animateCounter(counter3);
            }

            statsObserver.unobserve(entry.target);
          }
        });
      }, { threshold: 0.3 });

      statsObserver.observe(statsSection);
    }
  });
</script>