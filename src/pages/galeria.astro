</Layout>

<script>
  // Gallery filter functionality
  document.addEventListener('DOMContentLoaded', function() {
    const filterButtons = document.querySelectorAll('.gallery-filter');
    const galleryItems = document.querySelectorAll('.gallery-item');

    filterButtons.forEach((button: Element) => {
      button.addEventListener('click', function(this: HTMLElement) {
        const filter = this.getAttribute('data-filter');

        // Update active button
        filterButtons.forEach((btn: Element) => {
          const btnElement = btn as HTMLElement;
          btnElement.classList.remove('active', 'bg-red-600', 'text-white');
          btnElement.classList.add('bg-gray-200', 'text-gray-700');
        });
        this.classList.add('active', 'bg-red-600', 'text-white');
        this.classList.remove('bg-gray-200', 'text-gray-700');

        // Filter gallery items
        galleryItems.forEach((item: Element) => {
          const itemElement = item as HTMLElement;
          if (filter === 'all' || itemElement.getAttribute('data-category') === filter) {
            itemElement.style.display = 'block';
          } else {
            itemElement.style.display = 'none';
          }
        });
      });
    });
  });
</script>

